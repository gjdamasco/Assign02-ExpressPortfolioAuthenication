<body>   
    <!-- Body content -->
    <div class="container">
    <h1>
        <%= title %>
    </h1>
    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="contactName">Contact Name</span>            
            <input id="contactName" type="text" class="form-control" placeholder="Contact Name"
                aria-label="Contact Name" aria-describedby="Contact Name" name="contactName" 
                value="<%= contact.contactName%>" 
                required>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="contactNumber">Contact Number</span>
            <input id="contactNumber" type="text" class="form-control" placeholder="Contact Number"
                aria-label="Contact Number" aria-describedby="Contact Number" name="contactNumber" 
                value="<%= contact.contactNumber%>"
                required>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="emailAddress">Email Address</span>
            <input id="emailAdd" type="text" class="form-control" placeholder="Email Address"
                aria-label="Email Address" aria-describedby="Email Address" name="emailAdd" 
                value="<%= contact.emailAdd%>"
                required>
        </div>

        <% if (title.search("Edit") > -1 ) { %>
        <button type="submit" id="submitButton" class="btn btn-primary">
            <i class="fas fa-edit fa-lg"></i>Update
        </button>
        <% } else { %>
         <button type="submit" id="submitButton" class="btn btn-primary">
            <i class="fas fa-edit fa-lg"></i>Add
        </button>
         
        <% } %>

        <a href="/contact-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>        
    </form>
</div>

 <!-- Partials for footer section -->
   <%- include('../components/footer.ejs'); %>

  <!-- Script Section -->
  <%- include('../components/script.ejs'); %>

</body>
